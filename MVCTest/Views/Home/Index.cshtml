@model IEnumerable<EmployeeShiftsViewModel>

@{
    ViewData["Title"] = "Employee Shifts";
}

<div id="dialog" class="container">
    <form class="form form-horizontal">
        <div class="form-group row"> 
            <label for="inputSearchField" class="col-sm-5 col-form-label">Employee's Name contains: </label>
            <div class="col-sm-7">
                <input type="text" id="inputSearchField" class="form-control" placeholder="Type here..." />
                <small class="form-text text-muted">
                    Leave it blank to show all employees.
                </small>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-sm-12">
                <button type="button" id="btnFilterCancel" class="btn btn-secondary">Cancel</button>
                <button type="button" id="btnFilterOK" class="btn btn-primary">OK</button>
            </div>
        </div>
    </form>
</div>
<div id="divEmployeeList" class="container">
    <div class="row">
        <div class="col-md-11">
            <h1>Employee Shifts</h1>
        </div>
        <div class="col-md-1 text-right align-middle">
            <button id="btnFilter" class="btn btn-primary">Filter</button>
        </div>
    </div>
    <div class="row">
        <table class="table table-responsive table-striped">
			<thead>
				<tr>
					<th>
						@Html.DisplayNameFor(model => model.Employee.EmployeeId)
					</th>
					<th>
						@Html.DisplayNameFor(model => model.Employee.FullName)
					</th>
					<th>
						@Html.DisplayNameFor(model => model.TotalHours)
					</th>
				</tr>
			</thead>
			<tbody id="tbodyMain"></tbody>
		</table>
    </div>
</div>